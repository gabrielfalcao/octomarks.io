#!/usr/bin/env python
# -*- coding: utf-8; -*-
import os
import sys

# This command won't be used in production, so it's just an easy way to
# run the app and all the commands in the development environment.
from merchants.app import app

# Parsing the command-line arguments
if len(sys.argv) == 1:
    app.web.run(debug=True)
else:
    app.commands.run()
